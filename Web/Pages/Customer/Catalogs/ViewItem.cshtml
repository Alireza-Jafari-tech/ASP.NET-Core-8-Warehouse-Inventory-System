@page "{id:int}"
@model Web.Pages.Customer.Catalogs.ViewItemModel

@{

}

<style>
        :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --secondary: #64748b;
            --light: #f8fafc;
            --dark: #1e293b;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --gray-100: #f1f5f9;
            --gray-200: #e2e8f0;
            --gray-300: #cbd5e1;
            --gray-500: #64748b;
            --gray-700: #334155;
            --border-radius: 8px;
            --shadow: 0 4px 6px 3px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background-color: var(--gray-100);
            color: var(--dark);
            min-height: 100vh;
        }

        /* Top Navigation */
        .top-bar {
            background-color: white;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: var(--shadow);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .logo-icon {
            background-color: var(--primary);
            color: white;
            width: 36px;
            height: 36px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
        }

        .logo-text {
            font-weight: 700;
            font-size: 1.25rem;
            color: var(--dark);
        }

        .nav-actions {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: var(--border-radius);
            border: none;
            font-weight: 600;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: var(--transition);
        }

        .btn-primary {
            background-color: var(--primary);
            color: white;
        }

        .btn-primary:hover {
            background-color: var(--primary-dark);
        }

        .btn-outline {
            background-color: transparent;
            border: 1px solid var(--gray-300);
            color: var(--gray-700);
        }

        .btn-outline:hover {
            background-color: var(--gray-100);
        }

        .btn-success {
            background-color: var(--success);
            color: white;
        }

        .btn-success:hover {
            background-color: #0da271;
        }

        .btn-danger {
            background-color: var(--danger);
            color: white;
        }

        .btn-danger:hover {
            background-color: #dc2626;
        }

        .cart-indicator {
            position: relative;
            cursor: pointer;
        }

        .cart-count {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: var(--primary);
            color: white;
            font-size: 0.75rem;
            font-weight: 600;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: var(--primary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
        }

        /* Breadcrumb */
        .breadcrumb {
            padding: 1rem 2rem;
            background-color: white;
            border-bottom: 1px solid var(--gray-200);
        }

        .breadcrumb-links {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--gray-500);
            font-size: 0.875rem;
        }

        .breadcrumb-link {
            color: var(--gray-500);
            text-decoration: none;
            transition: var(--transition);
        }

        .breadcrumb-link:hover {
            color: var(--primary);
        }

        .breadcrumb-separator {
            color: var(--gray-300);
        }

        .breadcrumb-current {
            color: var(--dark);
            font-weight: 500;
        }

        /* Main Content */
        .content {
            padding: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .item-detail-container {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            overflow: hidden;
        }

        /* Item Header */
        .item-header {
            padding: 1.5rem 2rem;
            border-bottom: 1px solid var(--gray-200);
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .item-title-section {
            flex: 1;
        }

        .item-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .item-category {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.375rem 0.75rem;
            background-color: var(--gray-100);
            border-radius: 20px;
            font-size: 0.875rem;
            color: var(--gray-700);
        }

        /* Status Badge */
        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
        }

        .status-in-stock {
            background-color: #d1fae5;
            color: #065f46;
        }

        .status-low-stock {
            background-color: #fef3c7;
            color: #92400e;
        }

        .status-out-of-stock {
            background-color: #fee2e2;
            color: #991b1b;
        }

        /* Item Body */
        .item-body {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            padding: 2rem;
        }

        @@media (max-width: 768px) {
            .item-body {
                grid-template-columns: 1fr;
            }
        }

        /* Image Section */
        .item-image-container {
            position: relative;
            border-radius: var(--border-radius);
            overflow: hidden;
            background-color: var(--gray-100);
            min-height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .item-image {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .item-image-placeholder {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: var(--gray-300);
            font-size: 4rem;
            width: 100%;
            height: 100%;
        }

        /* Info Section */
        .item-info-section {
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }

        .item-price-section {
            padding: 1.5rem;
            background-color: var(--gray-100);
            border-radius: var(--border-radius);
        }

        .item-price-label {
            font-size: 0.875rem;
            color: var(--gray-500);
            margin-bottom: 0.5rem;
        }

        .item-price {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary);
            line-height: 1;
        }

        .item-stats-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        .stat-item {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .stat-label {
            font-size: 0.875rem;
            color: var(--gray-500);
            font-weight: 500;
        }

        .stat-value {
            font-size: 1.125rem;
            color: var(--dark);
            font-weight: 600;
        }

        .item-description {
            margin-top: 1rem;
        }

        .description-label {
            font-size: 1rem;
            color: var(--dark);
            font-weight: 600;
            margin-bottom: 0.75rem;
        }

        .description-content {
            color: var(--gray-700);
            line-height: 1.6;
            padding: 1rem;
            background-color: var(--gray-100);
            border-radius: var(--border-radius);
            min-height: 120px;
        }

        .description-empty {
            color: var(--gray-400);
            font-style: italic;
        }

        /* Order Section */
        .item-order-section {
            margin-top: auto;
            padding: 1.5rem;
            background-color: var(--gray-100);
            border-radius: var(--border-radius);
            border: 1px solid var(--gray-200);
        }

        .quantity-control {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .quantity-label {
            font-weight: 500;
            color: var(--gray-700);
            min-width: 80px;
        }

        .quantity-selector {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .quantity-btn {
            width: 40px;
            height: 40px;
            border-radius: 6px;
            border: 1px solid var(--gray-300);
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-size: 1.25rem;
            transition: var(--transition);
        }

        .quantity-btn:hover {
            border-color: var(--primary);
            color: var(--primary);
        }

        .quantity-input {
            width: 80px;
            padding: 0.5rem;
            text-align: center;
            border: 1px solid var(--gray-300);
            border-radius: 6px;
            font-size: 1rem;
            font-weight: 600;
        }

        .stock-warning {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem;
            background-color: #fef3c7;
            border-radius: var(--border-radius);
            color: #92400e;
            font-size: 0.875rem;
            margin-bottom: 1.5rem;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
        }

        .btn-lg {
            padding: 1rem 1.5rem;
            font-size: 1rem;
            flex: 1;
            justify-content: center;
        }

        /* Related Items */
        .related-items {
            margin-top: 3rem;
            background-color: #fff;
            padding: 20px;
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--dark);
        }

        .view-all {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }

        .view-all:hover {
            text-decoration: underline;
        }

        .items-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .item-card {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            overflow: hidden;
            transition: var(--transition);
        }

        .item-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
        }

        .card-image {
            height: 160px;
            background-color: var(--gray-100);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--gray-300);
            font-size: 2rem;
        }

        .card-image img {
            width: 100%;
            height: 100%;
            box-shadow: 0px 0px 1px 2px rgba(0,0,0,0.1);
        }

        .card-content {
            padding: 1.25rem;
        }

        .card-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.5rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .card-price {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.75rem;
        }

        .card-stock {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .card-actions {
            display: flex;
            gap: 0.75rem;
        }

        /* Footer */
        .footer {
            margin-top: 3rem;
            padding: 2rem;
            background-color: white;
            border-top: 1px solid var(--gray-200);
            text-align: center;
            color: var(--gray-500);
            font-size: 0.875rem;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .top-bar {
                padding: 1rem;
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }
            
            .nav-actions {
                width: 100%;
                justify-content: space-between;
            }
            
            .breadcrumb {
                padding: 1rem;
            }
            
            .content {
                padding: 1rem;
            }
            
            .item-header {
                padding: 1.5rem;
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }
            
            .item-body {
                padding: 1.5rem;
                gap: 1.5rem;
            }
            
            .action-buttons {
                flex-direction: column;
            }
            
            .btn-lg {
                width: 100%;
            }
        }

        @@media (max-width: 480px) {
            .item-stats-grid {
                grid-template-columns: 1fr;
            }
            
            .item-image-container {
                min-height: 300px;
            }
            
            .items-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <div class="breadcrumb-links">
            <a asp-page="/Customer/Index" class="breadcrumb-link">Dashboard</a>
            <span class="breadcrumb-separator">/</span>
            <a asp-page="/Customer/Catalogs/Index" class="breadcrumb-link">Catalog</a>
            <span class="breadcrumb-separator">/</span>
            <span class="breadcrumb-current">@Model.Item.Name</span>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content">
        <div class="item-detail-container">
            <!-- Item Header -->
            <div class="item-header">
                <div class="item-title-section">
                    <h1 class="item-title">@Model.Item.Name</h1>
                    <div class="item-category">
                        <i class="fas fa-microchip"></i> @Model.Item.Category.Name
                    </div>
                </div>
                <div class="status-badge @Model.Item.Status.CssClassName">
                    <i class="fas fa-check-circle"></i> @Model.Item.Status.Name
                </div>
            </div>

            <!-- Item Body -->
            <div class="item-body">
                <!-- Image Section -->
                <div class="item-image-container">
                    <img src="@Model.Item.PictureUrl" 
                         alt="@Model.Item.Name" class="item-image">
                    <!-- Fallback if no image -->
                    <!-- <div class="item-image-placeholder">
                        <i class="fas fa-microchip"></i>
                        <div style="font-size: 1rem; margin-top: 1rem;">@Model.Item.Name</div>
                    </div> -->
                </div>

                <!-- Info Section -->
                <div class="item-info-section">
                    <!-- Price Section -->
                    <div class="item-price-section">
                        <div class="item-price-label">Price per unit</div>
                        <div class="item-price">$@Model.Item.Cost</div>
                    </div>

                    <!-- Stats Grid -->
                    <div class="item-stats-grid">
                        <div class="stat-item">
                            <div class="stat-label">Available Quantity</div>
                            <div class="stat-value">@Model.Item.QuantityAvailabe units</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-label">Category</div>
                            <div class="stat-value">@Model.Item.Category.Name</div>
                        </div>
                        <!-- <div class="stat-item">
                            <div class="stat-label">SKU/ID</div>
                            <div class="stat-value">#WA-2023-001</div>
                        </div> -->
                    </div>

                    @if (Model.Item.Description != null)
                    {
                        <!-- Description -->
                        <div class="item-description">
                            <div class="description-label">Description</div>
                            <div class="description-content">
                                @Model.Item?.Description
                            </div>
                            <!-- For empty description:
                            <div class="description-content description-empty">
                                No description available for this item.
                            </div>
                            -->
                        </div>
                    }

                    <!-- Order Section -->
                    <form method="post" class="item-order-section">
                        <div class="quantity-control">
                            <div class="quantity-label">Quantity:</div>
                            <div class="quantity-selector">
                                <button type="button" class="quantity-btn" id="decrease-qty">-</button>
                                <input asp-for="Quantity" type="number" class="quantity-input" id="item-quantity" value="1" min="1"
                                max="@Model.Item.QuantityAvailabe">
                                <button type="button" class="quantity-btn" id="increase-qty">+</button>
                            </div>
                        </div>

                        @if (Model.Item.Status.Name == "Low Stock")
                        {
                            <div class="stock-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                <span>Limited stock available. Order soon to avoid disappointment.</span>
                            </div>
                        }

                        <div class="action-buttons">
                            <button type="submit" class="btn btn-primary btn-lg"
                                id="add-to-cart-btn">
                                    <i class="fas fa-cart-plus"></i> Add to Cart
                            </button>
                            <!-- <button class="btn btn-outline btn-lg" id="wishlist-btn">
                                <i class="far fa-heart"></i> Save for Later
                            </button> -->
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Related Items -->
        @if (Model.RelatedItems != null && Model.RelatedItems.Any())
        {
            <div class="related-items">
                <div class="section-header">
                    <h2 class="section-title">Related Items</h2>
                </div>
                <div class="items-grid">
                    @foreach (var item in Model.RelatedItems)
                    {
                        <div class="item-card">
                            <div class="card-image">
                                <img src="@item.PictureUrl" />
                            </div>

                            <div class="card-content">
                                <h3 class="card-title">@item.Name</h3>

                                <div class="card-price">
                                    $@item.Cost
                                </div>

                                <div class="card-stock">
                                    <span class="status-badge @Model.Item.Status.CssClassName"
                                          style="font-size: 0.75rem; padding: 0.25rem 0.5rem;">
                                        @Model.Item.Status.Name
                                    </span>
                                </div>

                                <div class="card-actions">
                                    <a asp-page="/Customer/Catalogs/ViewItem" asp-route-id="@item.Id"
                                       class="btn btn-outline btn-sm">
                                        View
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>   
        }
    </div>

    <!-- Footer -->
    <div class="footer">
        <p>WarehousePro Inventory System Â© 2023. All rights reserved.</p>
        <p style="margin-top: 0.5rem;">Contact support: support@warehousepro.com | (555) 123-4567</p>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Quantity Controls
            const quantityInput = document.getElementById('item-quantity');
            const decreaseBtn = document.getElementById('decrease-qty');
            const increaseBtn = document.getElementById('increase-qty');
            const maxQuantity = 125; // This should come from server data

            decreaseBtn.addEventListener('click', function() {
                let current = parseInt(quantityInput.value) || 1;
                if (current > 1) {
                    quantityInput.value = current - 1;
                }
            });

            increaseBtn.addEventListener('click', function() {
                let current = parseInt(quantityInput.value) || 1;
                if (current < maxQuantity) {
                    quantityInput.value = current + 1;
                } else {
                    alert(`Maximum available quantity is ${maxQuantity} units`);
                }
            });

            quantityInput.addEventListener('change', function() {
                let value = parseInt(this.value) || 1;
                if (value < 1) {
                    this.value = 1;
                } else if (value > maxQuantity) {
                    this.value = maxQuantity;
                    alert(`Maximum available quantity is ${maxQuantity} units`);
                }
            });

            // Check stock status and update UI accordingly
            function updateStockUI() {
                const availableQty = 125; // This should come from server
                const statusBadge = document.querySelector('.status-badge');
                const stockWarning = document.querySelector('.stock-warning');
                const addToCartBtn = document.getElementById('add-to-cart-btn');
                
                if (availableQty <= 0) {
                    // Out of stock
                    statusBadge.className = 'status-badge status-out-of-stock';
                    statusBadge.innerHTML = '<i class="fas fa-times-circle"></i> Out of Stock';
                    
                    stockWarning.innerHTML = `
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>This item is currently out of stock. Contact us for restock timeline.</span>
                    `;
                    stockWarning.style.backgroundColor = '#fee2e2';
                    stockWarning.style.color = '#991b1b';
                    
                    addToCartBtn.disabled = true;
                    addToCartBtn.innerHTML = '<i class="fas fa-ban"></i> Out of Stock';
                    addToCartBtn.style.backgroundColor = 'var(--gray-300)';
                    addToCartBtn.style.borderColor = 'var(--gray-300)';
                    
                    quantityInput.disabled = true;
                    decreaseBtn.disabled = true;
                    increaseBtn.disabled = true;
                    
                } else if (availableQty <= 10) {
                    // Low stock
                    statusBadge.className = 'status-badge status-low-stock';
                    statusBadge.innerHTML = '<i class="fas fa-exclamation-triangle"></i> Low Stock';
                    
                    stockWarning.innerHTML = `
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>Only ${availableQty} units remaining. Order soon!</span>
                    `;
                    
                    // Update max quantity
                    quantityInput.max = availableQty;
                }
            }
            
            // Initialize stock UI
            updateStockUI();
        });
    </script>