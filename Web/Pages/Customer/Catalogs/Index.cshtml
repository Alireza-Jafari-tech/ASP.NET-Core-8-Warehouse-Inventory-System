<div class="content">
    <div id="catalog">
                <div class="page-header">
                    <h1 class="page-title">Browse Inventory</h1>
                    <div class="page-filter-section">
                        <form method="post" id="search-form" class="search-bar" style="width: 260px;">
                            <button type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                            <input type="text" placeholder="Search items..." id="search-bar" required>
                        </form>
                        <button class="btn btn-outline" id="filterBtn"><i class="fas fa-filter"></i> Filter</button>
                    </div>
                </div>

                <div class="catalog-grid">
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <div class="item-card">
                                <div class="item-image">
                                    <img src="@item.PictureUrl">
                                </div>
                                <div class="item-content">
                                    <h3 class="item-name">@item.Name</h3>
                                    <div class="item-category">@item?.Category?.Name</div>
                                    <div class="item-price">$@item.Cost</div>
                                    <div class="item-stock">
                                        <span class="stock-badge @item?.Status?.CssClassName">@item?.Status?.Name: @item.QuantityAvailabe units</span>
                                    </div>
                                    <div class="item-actions">
                                        <a asp-page="/Customer/Catalogs/ViewItem" asp-route-id="@item.Id" class="btn btn-outline btn-sm">View Details</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
</div>

<!-- Modals -->
    
    <!-- Filter Modal -->
<div class="modal" id="filterModal">
    <form method="post" asp-page-handler="FilterItems" id="filter-modal-form" class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title">Filter Items</h2>
            <button type="button" class="modal-close">&times;</button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label asp-for="ItemFilterDto.SearchItemString" class="form-label"></label>
                <input asp-for="ItemFilterDto.SearchItemString" type="text" class="form-control" id="item-filter-search" placeholder="Enter item name">
                <span asp-validation-for="ItemFilterDto.SearchItemString"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemFilterDto.CategoryId" class="form-label"></label>
                <select asp-for="ItemFilterDto.CategoryId" asp-items="@Model.CatergoriesDropdown" class="form-control">
                    <option value="0">All Categories</option>
                </select>
                <span asp-validation-for="ItemFilterDto.CategoryId"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemFilterDto.StatusId" class="form-label">Status</label>
                <select asp-for="ItemFilterDto.StatusId" asp-items="@Model.ItemsStatusDropdown" class="form-control">
                    <option value="0">All Status</option>
                </select>
                <span asp-validation-for="ItemFilterDto.StatusId"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="ItemFilterDto.IsAvailable" class="form-check-input" type="checkbox" checked="checked" id="IsAvailable">
                    <label asp-for="ItemFilterDto.IsAvailable" class="form-check-label" checked>Availability</label>
                    <span asp-validation-for="ItemFilterDto.IsAvailable" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="form-label">Cost Range</label>
                <div style="display: flex; gap: 1rem;">
                    <label asp-for="ItemFilterDto.MinCost"></label>
                    <br />
                    <input asp-for="ItemFilterDto.MinCost" type="number" class="form-control" placeholder="Min" value="0" min="0" step="0.01">
                <span asp-validation-for="ItemFilterDto.MinCost"></span>
                    <label asp-for="ItemFilterDto.MaxCost"></label>
                    <br />
                    <input asp-for="ItemFilterDto.MaxCost" value="@Model.MaxPrice" type="number" class="form-control" placeholder="Max" min="0" step="0.01">
                <span asp-validation-for="ItemFilterDto.MaxCost"></span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-outline close-modal">Clear Filters</button>
            <button type="submit" class="btn btn-primary">Apply Filters</button>
        </div>
    </form>
</div>

    <script>
    // Wait for DOM to be fully loaded
    document.addEventListener('DOMContentLoaded', function() {
        const filterBtn = document.getElementById('filterBtn');
        const filterModal = document.getElementById('filterModal');
        
        // Check if elements exist (in case they're conditionally rendered)
        if (!filterBtn || !filterModal) {
            console.warn('Filter elements not found');
            return;
        }
        
        // Open modal
        filterBtn.addEventListener('click', () => {
            console.log("filter btn clicked");
            filterModal.classList.add('active');
        });

        // Close modals - use event delegation for dynamically added elements
        document.addEventListener('click', function(e) {
            // Close modal when clicking close buttons
            if (e.target.classList.contains('modal-close') || 
                e.target.classList.contains('close-modal')) {
                filterModal.classList.remove('active');
            }
            
            // Close modal when clicking outside
            if (e.target === filterModal) {
                filterModal.classList.remove('active');
            }
        });

        // Form submission for search
        const searchForm = document.getElementById('search-form');
        const filterModalForm = document.getElementById('filter-modal-form');
        
        if (searchForm) {
            searchForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Copy value from external input to field in the filter modal
                const searchBar = document.querySelector('#search-bar');
                const itemFilterSearch = document.querySelector('#item-filter-search');
                
                if (searchBar && itemFilterSearch) {
                    itemFilterSearch.value = searchBar.value;
                }
                
                // Submit the filter form
                if (filterModalForm) {
                    filterModalForm.submit();
                }
            });
        }
        
        // Clear filters functionality
        const clearFilterBtn = document.querySelector('.close-modal');
        if (clearFilterBtn) {
            clearFilterBtn.addEventListener('click', function(e) {
                if (e.target.classList.contains('close-modal')) {
                    // Clear all filter inputs
                    const filterForm = document.getElementById('filter-modal-form');
                    if (filterForm) {
                        filterForm.reset();
                        
                        // Reset select boxes to "All" option
                        const selects = filterForm.querySelectorAll('select');
                        selects.forEach(select => {
                            if (select.value === '0') {
                                select.selectedIndex = 0;
                            }
                        });
                        
                        // Keep the search value from main search bar
                        const searchBar = document.querySelector('#search-bar');
                        const itemFilterSearch = document.querySelector('#item-filter-search');
                        if (searchBar && itemFilterSearch && searchBar.value) {
                            itemFilterSearch.value = searchBar.value;
                        }
                    }
                }
            });
        }
    });
</script>