@page "/Admin/Orders/ViewOrder/{id:int}"
@model Web.Pages.Admin.Orders.ViewOrderModel

@{
    decimal totalItemsCost = 0M;
    var tax = Model.GetTax();
}

<style>
    :root {
        --primary-light: #dbeafe;
    }
	body {
            background-color: var(--light);
            color: var(--dark);
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid var(--gray-200);
        }

        .page-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .page-title i {
            color: var(--primary);
        }

        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            background-color: white;
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            color: var(--gray-700);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            background-color: var(--gray-100);
            border-color: var(--gray-400);
        }

        /* Order Summary Card */
        .order-summary {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: 25px;
            margin-bottom: 30px;
        }

        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 25px;
        }

        .order-id {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--dark);
        }

        .order-id-label {
            font-size: 0.875rem;
            color: var(--gray-500);
            margin-bottom: 5px;
        }

        /* Status Badge */
        .order-status-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* Pending - Yellow/Amber */
.order-status-pending {
    background-color: #fef3c7;
    color: #92400e;
    border-color: #fde68a;
}

/* Confirmed - Blue */
.order-status-confirmed {
    background-color: #dbeafe;
    color: #1e40af;
    border-color: #93c5fd;
}

/* Processing - Purple */
.order-status-processing {
    background-color: #e9d5ff;
    color: #6b21a8;
    border-color: #c084fc;
}

/* Shipped - Indigo */
.order-status-shipped {
    background-color: #c7d2fe;
    color: #3730a3;
    border-color: #818cf8;
}

/* Delivered - Green */
.order-status-delivered {
    background-color: #d1fae5;
    color: #065f46;
    border-color: #6ee7b7;
}

/* Cancelled - Red */
.order-status-cancelled {
    background-color: #fee2e2;
    color: #991b1b;
    border-color: #fca5a5;
}

/* On Hold - Gray */
.order-status-onhold {
    background-color: #f3f4f6;
    color: #4b5563;
    border-color: #d1d5db;
}

/* Refunded - Orange */
.order-status-refunded {
    background-color: #ffedd5;
    color: #9a3412;
    border-color: #fdba74;
}

        /* Order Details Grid */
        .order-details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 25px;
        }

        .detail-group {
            padding: 15px;
            background-color: var(--gray-100);
            border-radius: var(--border-radius);
        }

        .detail-label {
            font-size: 0.875rem;
            color: var(--gray-500);
            margin-bottom: 5px;
            font-weight: 500;
        }

        .detail-value {
            font-size: 1rem;
            color: var(--dark);
            font-weight: 500;
        }

        .customer-info {
            background-color: var(--primary-light);
            border-left: 4px solid var(--primary);
        }

        .customer-name {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 5px;
        }

        /* Description Section */
        .description-section {
            margin-top: 20px;
            padding: 20px;
            background-color: var(--gray-100);
            border-radius: var(--border-radius);
        }

        .section-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .description-content {
            color: var(--gray-700);
            line-height: 1.8;
            padding: 15px;
            background-color: white;
            border-radius: var(--border-radius);
            border: 1px solid var(--gray-200);
        }

        /* Order Items Table */
        .order-items-section {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: 25px;
            margin-bottom: 30px;
        }

        .table-container {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        thead {
            background-color: var(--gray-100);
        }

        th {
            padding: 15px;
            text-align: left;
            font-weight: 600;
            color: var(--gray-700);
            border-bottom: 2px solid var(--gray-200);
        }

        td {
            padding: 15px;
            border-bottom: 1px solid var(--gray-200);
        }

        tbody tr:hover {
            background-color: var(--gray-100);
        }

        .item-image {
            width: 50px;
            height: 50px;
            border-radius: 6px;
            background-color: var(--gray-200);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--gray-500);
        }

        .item-image img {
            width: 100%;
            height: 100%;
        }

        .item-name {
            font-weight: 500;
            color: var(--dark);
        }

        .item-category {
            font-size: 0.875rem;
            color: var(--gray-500);
        }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }

        /* Order Totals */
        .order-totals {
            background-color: var(--gray-100);
            border-radius: var(--border-radius);
            padding: 25px;
            margin-top: 20px;
        }

        .total-row {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid var(--gray-200);
        }

        .total-row:last-child {
            border-bottom: none;
            font-weight: 700;
            font-size: 1.125rem;
            color: var(--dark);
            padding-top: 15px;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 15px;
            justify-content: flex-end;
            margin-top: 30px;
            padding-top: 25px;
            border-top: 2px solid var(--gray-200);
        }

        .btn {
            padding: 12px 24px;
            border-radius: var(--border-radius);
            border: none;
            font-weight: 600;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            font-size: 0.875rem;
        }

        .btn-primary {
            background-color: var(--primary);
            color: white;
        }

        .btn-primary:hover {
            background-color: #1d4ed8;
        }

        .btn-success {
            background-color: var(--success);
            color: white;
        }

        .btn-success:hover {
            background-color: #0da271;
        }

        .btn-danger {
            background-color: var(--danger);
            color: white;
        }

        .btn-danger:hover {
            background-color: #dc2626;
        }

        .btn-outline {
            background-color: transparent;
            border: 1px solid var(--gray-300);
            color: var(--gray-700);
        }

        .btn-outline:hover {
            background-color: var(--gray-100);
        }

        /* Status Update Section */
        .status-update-section {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            padding: 25px;
            margin-top: 20px;
        }

        .status-form {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .status-select {
            flex: 1;
            padding: 12px;
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            font-size: 1rem;
            color: var(--dark);
        }

        /* Empty States */
        .empty-state {
            text-align: center;
            padding: 50px 20px;
            color: var(--gray-500);
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .container {
                padding: 15px;
            }

            .page-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }

            .order-header {
                flex-direction: column;
                gap: 15px;
            }

            .order-details-grid {
                grid-template-columns: 1fr;
            }

            .action-buttons {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .status-form {
                flex-direction: column;
            }

            .status-select {
                width: 100%;
            }

            table {
                font-size: 0.875rem;
            }

            th, td {
                padding: 10px 5px;
            }
        }

        @@media (max-width: 480px) {
            .page-title {
                font-size: 1.5rem;
            }

            .order-summary,
            .order-items-section,
            .status-update-section {
                padding: 20px 15px;
            }
        }
</style>

<div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <div>
                <h1 class="page-title">
                    <i class="fas fa-clipboard-list"></i> Order Details
                </h1>
            </div>
            <a href="orders.html" class="back-btn">
                <i class="fas fa-arrow-left"></i> Back to Orders
            </a>
        </div>

        <!-- Order Summary -->
        <div class="order-summary">
            <div class="order-header">
                <div>
                    <div class="order-id-label">ORDER ID</div>
                    <div class="order-id">@Model.Order.Id</div>
                </div>
                <span class="order-status-badge @Model.Order.OrderStatus.CssClassName">
                    <i class="fas fa-cogs"></i> @Model.Order.OrderStatus.Name
                </span>
            </div>

            <!-- Order Details Grid -->
            <div class="order-details-grid">
                <div class="detail-group customer-info">
                    <div class="detail-label">CUSTOMER</div>
                    <div class="customer-name">@Model.Order.CompanyName</div>
                    <!-- <div class="detail-value">contact@abccorp.com</div>
                    <div class="detail-value">(555) 123-4567</div> -->
                </div>

                <div class="detail-group">
                    <div class="detail-label">SUBMITTED DATE</div>
                    <div class="detail-value">@Model.Order.OrderSubmittedDate?.ToString("MM/dd/yyyy")</div>
                    <div class="detail-value">@Model.Order.OrderSubmittedDate?.ToString("hh:mm tt")</div>
                </div>

                <div class="detail-group">
                    <div class="detail-label">CONFIRMED DATE</div>
                    <div class="detail-value">@(Model.Order.OrderConfirmedDate?.ToString("MM/dd/yyyy") ?? "---")</div>
                    <div class="detail-value">@Model.Order.OrderConfirmedDate?.ToString("hh:mm tt")</div>
                </div>

                <!-- <div class="detail-group">
                    <div class="detail-label">LAST UPDATED</div>
                    <div class="detail-value">Today, 2:45 PM</div>
                    <div class="detail-value">By: Admin User</div>
                </div> -->
            </div>

            @if (Model.Order.Description != null)
            {
                <!-- Description -->
                <div class="description-section">
                    <h3 class="section-title">
                        <i class="fas fa-file-alt"></i> Order Description
                    </h3>
                    <div class="description-content">
                        <p>@Model.Order.Description</p>
                    </div>
                </div>
            }
        </div>

        <!-- Order Items -->
        <div class="order-items-section">
            <h2 class="section-title">
                <i class="fas fa-boxes"></i> Order Items
            </h2>
            
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th width="50">#</th>
                            <th>Item</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-center">Unit Price</th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Order.OrderItems != null)
                        {
                            foreach (var orderItem in Model.Order.OrderItems)
                            {
                                var item = orderItem.Item;
                                var i = 1;
                                var itemCost = orderItem.Quantity * item.Cost;
                                totalItemsCost += itemCost;
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        <div style="display: flex; align-items: center; gap: 15px;">
                                            <div class="item-image">
                                                <img src="@item.PictureUrl" />
                                            </div>
                                            <div>
                                                <div class="item-name">@item.Name</div>
                                                <div class="item-category">@item?.Category?.Name â€¢ Id: @item.Id</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">@orderItem.Quantity</td>
                                    <td class="text-center">$@item.Cost</td>
                                    <td class="text-right">$@itemCost</td>
                                </tr>
                                i++;
                            }
                            tax.Cost = totalItemsCost * (tax.Percent / 100M);
                        }
                    </tbody>
                </table>
            </div>

            <!-- Order Totals -->
            <div class="order-totals">
                <div class="total-row">
                    <span>Subtotal</span>
                    <span>$@totalItemsCost</span>
                </div>
                <div class="total-row">
                    <span>Tax (@tax.Percent%)</span>
                    <span>$@tax.Cost</span>
                </div>
                <div class="total-row">
                    <span>Total</span>
                    <span>$@(totalItemsCost + tax.Cost)</span>
                </div>
            </div>
        </div>

        <!-- Status Update -->
        <div class="status-update-section">
            <h3 class="section-title">
                <i class="fas fa-sync-alt"></i> Update Order Status
            </h3>
            <form method="post" class="status-form">
                <input type="hidden" asp-for="OrderId" value="@Model.Order.Id">
                <input type="hidden" asp-for="OrderTotalCost" id="order-total-cost" readonly value="@(totalItemsCost + tax.Cost)">
                <select asp-for="SelectedOrderStatusId" asp-items="Model.OrderStatusDropdown" class="status-select">
                    <option value="0">Select order status</option>
                </select>
                <span asp-validation-for="SelectedOrderStatusId"></span>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check"></i> Update Status
                </button>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Status update functionality
            const updateStatusBtn = document.querySelector('.status-form .btn-primary');
            const statusSelect = document.querySelector('.status-select');
            const statusBadge = document.querySelector('.order-status-badge');
            
            updateStatusBtn.addEventListener('click', function() {
                const newStatus = statusSelect.value;
                const statusText = statusSelect.options[statusSelect.selectedIndex].text;
                
                // Update badge
                statusBadge.className = `order-status-badge status-${newStatus}`;
                statusBadge.innerHTML = `<i class="fas fa-${getStatusIcon(newStatus)}"></i> ${statusText}`;
                
            });
            
            function getStatusIcon(status) {
                const icons = {
                    'pending': 'clock',
                    'confirmed': 'check-circle',
                    'processing': 'cogs',
                    'shipped': 'shipping-fast',
                    'delivered': 'box-open',
                    'cancelled': 'times-circle'
                };
                return icons[status] || 'info-circle';
            }
            
            // Print invoice
            document.querySelector('.btn-outline:nth-child(1)').addEventListener('click', function() {
                // In real app: window.print() or open print dialog
            });
            
            // Email customer
            document.querySelector('.btn-outline:nth-child(2)').addEventListener('click', function() {
                // In real app: window.location.href = 'mailto:...'
            });
            
            // Mark as shipped
            document.querySelector('.btn-success').addEventListener('click', function() {
                if (confirm('Mark this order as shipped?')) {
                    statusSelect.value = 'shipped';
                    updateStatusBtn.click();
                }
            });
            
            // Cancel order
            document.querySelector('.btn-danger').addEventListener('click', function() {
                if (confirm('Are you sure you want to cancel this order?')) {
                    const reason = prompt('Please enter cancellation reason:');
                    if (reason) {
                        statusSelect.value = 'cancelled';
                        updateStatusBtn.click();
                    }
                }
            });
        });
    </script>